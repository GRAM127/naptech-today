<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_16"
    android:padding="16dp">

    <View
        android:id="@+id/contour2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="32dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_subject_0" />

    <ImageView
        android:id="@+id/image_subject_0"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/image_subject_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_subject_0" />

    <ImageView
        android:id="@+id/image_subject_1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/image_subject_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_subject_0"
        app:layout_constraintTop_toTopOf="@+id/image_subject_0"
        app:srcCompat="@drawable/ic_subject_1" />

    <ImageView
        android:id="@+id/image_subject_2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/image_subject_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_subject_1"
        app:layout_constraintTop_toTopOf="@+id/image_subject_1"
        app:srcCompat="@drawable/ic_subject_2" />

    <ImageView
        android:id="@+id/image_subject_3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/image_subject_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_subject_2"
        app:layout_constraintTop_toTopOf="@+id/image_subject_2"
        app:srcCompat="@drawable/ic_subject_3" />

    <ImageView
        android:id="@+id/image_subject_4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_subject_3"
        app:layout_constraintTop_toTopOf="@+id/image_subject_3"
        app:srcCompat="@drawable/ic_subject_4" />

    <View
        android:id="@+id/view_red"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_orange"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contour2" />

    <View
        android:id="@+id/view_orange"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedOrange"
        app:layout_constraintEnd_toStartOf="@+id/view_yellow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_red"
        app:layout_constraintTop_toTopOf="@+id/view_red" />

    <View
        android:id="@+id/view_yellow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedYellow"
        app:layout_constraintEnd_toStartOf="@+id/view_green"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_orange"
        app:layout_constraintTop_toTopOf="@+id/view_orange" />

    <View
        android:id="@+id/view_green"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedGreen"
        app:layout_constraintEnd_toStartOf="@+id/view_blue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_yellow"
        app:layout_constraintTop_toTopOf="@+id/view_yellow" />

    <View
        android:id="@+id/view_blue"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedBlue"
        app:layout_constraintEnd_toStartOf="@+id/view_violet"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_green"
        app:layout_constraintTop_toTopOf="@+id/view_green" />

    <View
        android:id="@+id/view_violet"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedViolet"
        app:layout_constraintEnd_toStartOf="@+id/view_gray"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_blue"
        app:layout_constraintTop_toTopOf="@+id/view_blue" />

    <View
        android:id="@+id/view_gray"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rectangle_16"
        android:backgroundTint="@color/accentedGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_violet"
        app:layout_constraintTop_toTopOf="@+id/view_violet" />
</androidx.constraintlayout.widget.ConstraintLayout>