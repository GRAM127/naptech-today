<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_subject_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_16"
    android:clipChildren="false"
    android:padding="32dp">

    <ImageView
        android:id="@+id/image_study_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_inprogress" />

    <TextView
        android:id="@+id/text_study_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="NAME"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_study_icon"
        app:layout_constraintStart_toEndOf="@+id/image_study_icon"
        app:layout_constraintTop_toTopOf="@+id/image_study_icon" />

    <TextView
        android:id="@+id/text_study_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="하루 1시간"
        android:textColor="@color/text_black_light"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_study_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_study_name" />

    <!-- TODO("막대 크게 해서 공부 시간 볼 수 있도록") -->

</androidx.constraintlayout.widget.ConstraintLayout>